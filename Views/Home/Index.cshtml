@model BookDisplay
@{
    ViewData["Title"] = "Home Page";
}

<div class="my-2">
    <form asp-action="Index" asp-controller="Home" method="get" class="row row-cols-lg-auto g-3 align-items-center">

        <div class="col">
            <label class="visually-hidden" for="genreId">Genres</label>
            <select class="form-select" id="genreId" name="genreId">
                <option value="0">Choose...</option>
                @foreach (var genre in Model.Genres)
                {
                    <option value="@genre.Id" selected="@(genre.Id == Model.GenreId)">
                        @genre.GenreName
                    </option>
                }
            </select>
        </div>

        <div class="col">
            <label class="visually-hidden" for="sterm">Search by title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" id="sterm" name="sterm"
                       value="@Model.STerm" placeholder="Search by title" />
            </div>
        </div>

        <div class="col">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Reset</a>
        </div>

    </form>
</div>

<!-- Book List Grid -->
<div class="container mt-4">
    <div class="row">
        @foreach (var book in Model.Books)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (string.IsNullOrEmpty(book.Image))
                    {
                        <img src="/css/images/noImage.jfit"
                             class="card-img-top"
                             style="height:150px; object-fit:cover;"
                             alt="Book Image" />
                    }
                    else
                    {
                        <img src="@book.Image"
                             class="card-img-top"
                             style="height:150px; object-fit:cover;"
                             alt="Book Image" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.BookName</h5>
                        <p class="card-text mb-3">
                            Genre: @book.GenreName<br />
                            Author: @book.AuthorName<br />
                            Price: @book.Price$
                        </p>
                        <button type="button"
                                onclick="add(@book.Id)"
                                class="btn btn-primary mt-auto">
                            Add To Cart
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        async function add(bookId) {
            try {
                var response = await fetch(`/Cart/addItem?bookId=${bookId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    console.log(result);
                    var cartItemEL = document.getElementById("cartCount");
                    cartItemEL.innerHTML = result;

                    alert("Book added to cart successfully!");
                }
            } catch (error) {
                console.error(error);
            }
        }
    </script>
}
